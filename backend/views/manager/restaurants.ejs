        // Toast notification system
        const toast = new bootstrap.Toast(document.getElementById('notificationToast'));
        
        function showNotification(title, message, type = 'info') {
            const toastTitle = document.getElementById('toastTitle');
            const toastMessage = document.getElementById('toastMessage');
            
            toastTitle.textContent = title;
            toastMessage.textContent = message;
            
            // Set color based on type
            const toastHeader = document.querySelector('#notificationToast .toast-header');
            const types = {
                'success': 'bg-success text-white',
                'error': 'bg-danger text-white',
                'warning': 'bg-warning text-dark',
                'info': 'bg-info text-white'
            };
            
            toastHeader.className = `toast-header ${types[type] || 'bg-info text-white'}`;
            toast.show();
        }
        
        // Loading spinner
        function showLoading() {
            document.getElementById('loadingSpinner').style.display = 'flex';
        }
        
        function hideLoading() {
            document.getElementById('loadingSpinner').style.display = 'none';
        }
        
        // Initialize Select2
        $(document).ready(function() {
            $('.select2').select2({
                placeholder: 'Select cuisine types',
                allowClear: true,
                width: '100%'
            });
            
            // Load restaurants data
            loadRestaurants();
            
            // Setup event listeners
            setupEventListeners();
        });
        
        function setupEventListeners() {
            // Search input
            document.getElementById('searchInput').addEventListener('input', filterRestaurants);
            
            // Status filter
            document.getElementById('statusFilter').addEventListener('change', filterRestaurants);
            
            // Sort filter
            document.getElementById('orderFilter').addEventListener('change', filterRestaurants);
            
            // Image upload previews
            setupImageUploads();
            
            // Form validation
            document.getElementById('restaurantForm').addEventListener('submit', function(e) {
                e.preventDefault();
                saveRestaurant();
            });
        }
        
        function setupImageUploads() {
            // Logo upload
            document.getElementById('logoInput').addEventListener('change', function(e) {
                previewImage(e.target.files[0], 'logoPreview');
            });
            
            // Cover upload
            document.getElementById('coverInput').addEventListener('change', function(e) {
                previewImage(e.target.files[0], 'coverPreview');
            });
            
            // Gallery upload
            document.getElementById('galleryInput').addEventListener('change', function(e) {
                const galleryPreviews = document.getElementById('galleryPreviews');
                galleryPreviews.innerHTML = '';
                
                Array.from(e.target.files).forEach(file => {
                    const reader = new FileReader();
                    reader.onload = function(e) {
                        const img = document.createElement('img');
                        img.src = e.target.result;
                        img.className = 'img-thumbnail';
                        img.style.width = '100px';
                        img.style.height = '100px';
                        img.style.objectFit = 'cover';
                        galleryPreviews.appendChild(img);
                    };
                    reader.readAsDataURL(file);
                });
            });
            
            // Drag and drop
            ['logoUpload', 'coverUpload', 'galleryUpload'].forEach(id => {
                const container = document.getElementById(id);
                container.addEventListener('dragover', function(e) {
                    e.preventDefault();
                    this.classList.add('dragover');
                });
                
                container.addEventListener('dragleave', function(e) {
                    e.preventDefault();
                    this.classList.remove('dragover');
                });
                
                container.addEventListener('drop', function(e) {
                    e.preventDefault();
                    this.classList.remove('dragover');
                    
                    const files = e.dataTransfer.files;
                    if (files.length > 0) {
                        if (id === 'galleryUpload') {
                            document.getElementById('galleryInput').files = files;
                            const event = new Event('change');
                            document.getElementById('galleryInput').dispatchEvent(event);
                        } else {
                            const inputId = id === 'logoUpload' ? 'logoInput' : 'coverInput';
                            document.getElementById(inputId).files = files;
                            const event = new Event('change');
                            document.getElementById(inputId).dispatchEvent(event);
                        }
                    }
                });
            });
        }
        
        function previewImage(file, previewId) {
            if (file) {
                const reader = new FileReader();
                reader.onload = function(e) {
                    const preview = document.getElementById(previewId);
                    preview.src = e.target.result;
                    preview.style.display = 'block';
                };
                reader.readAsDataURL(file);
            }
        }
        
        // Load all restaurants
        async function loadRestaurants() {
            try {
                showLoading();
                
                // In a real implementation, fetch from your API
                // For now, use the data passed from server
                restaurantsData = [];
                
                // Convert EJS data to array
                document.querySelectorAll('[data-restaurant-id]').forEach(card => {
                    const restaurantId = card.getAttribute('data-restaurant-id');
