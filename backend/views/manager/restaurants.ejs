                    showNotification('Error', 'Failed to load restaurant data', 'error');
                }
            } catch (error) {
                console.error('Error editing restaurant:', error);
                showNotification('Error', 'Failed to load restaurant data', 'error');
            } finally {
                hideLoading();
            }
        }
        
        // Delete restaurant
        function deleteRestaurant(restaurantId) {
            currentRestaurantId = restaurantId;
            
            const restaurantName = document.querySelector(`[data-restaurant-id="${restaurantId}"] .restaurant-overlay h5`).textContent;
            
            document.getElementById('confirmTitle').textContent = 'Delete Restaurant';
            document.getElementById('confirmMessage').innerHTML = `
                <p>Are you sure you want to delete <strong>${restaurantName}</strong>?</p>
                <p class="text-danger"><i class="fas fa-exclamation-triangle me-1"></i> This action cannot be undone. All menu items and order history will be permanently deleted.</p>
            `;
            
            document.getElementById('confirmActionBtn').onclick = confirmDelete;
            
            const modal = new bootstrap.Modal(document.getElementById('confirmModal'));
            modal.show();
        }
        
        async function confirmDelete() {
            try {
                showLoading();
                
                // Close confirmation modal
                const confirmModal = bootstrap.Modal.getInstance(document.getElementById('confirmModal'));
                confirmModal.hide();
                
                // Delete restaurant via API
                const response = await fetch(`${API_BASE}/${currentRestaurantId}`, {
                    method: 'DELETE',
                    headers: {
                        'Authorization': `Bearer ${getToken()}`
                    }
                });
                
                const data = await response.json();
                
                if (data.success) {
                    showNotification('Success', 'Restaurant deleted successfully', 'success');
                    
                    // Remove from DOM
                    const card = document.querySelector(`[data-restaurant-id="${currentRestaurantId}"]`);
                    if (card) {
                        card.remove();
                    }
                    
                    // Update restaurantsData
                    restaurantsData = restaurantsData.filter(r => r.id !== currentRestaurantId);
                    
                    // Show empty state if no restaurants left
                    if (restaurantsData.length === 0) {
                        document.getElementById('restaurantsList').innerHTML = `
                            <div class="col-12">
                                <div class="empty-state">
                                    <i class="fas fa-store"></i>
                                    <h4>No restaurants found</h4>
                                    <p>Add your first restaurant to get started</p>
                                    <button class="btn btn-primary btn-lg" data-bs-toggle="modal" data-bs-target="#restaurantModal" onclick="openAddModal()">
                                        <i class="fas fa-plus me-2"></i> Add Restaurant
                                    </button>
                                </div>
                            </div>
                        `;
                    }
                } else {
                    showNotification('Error', data.error || 'Failed to delete restaurant', 'error');
                }
            } catch (error) {
                console.error('Error deleting restaurant:', error);
                showNotification('Error', 'Failed to delete restaurant', 'error');
            } finally {
                hideLoading();
                currentRestaurantId = null;
            }
        }
        
        // Save restaurant (Create or Update)
        async function saveRestaurant() {
            const form = document.getElementById('restaurantForm');
            
            // Validate form
            if (!form.checkValidity()) {
                form.classList.add('was-validated');
                showNotification('Error', 'Please fill in all required fields correctly', 'error');
                return;
            }
            
            try {
                showLoading();
                
                // Prepare form data
                const formData = new FormData(form);
                const restaurantId = document.getElementById('restaurantId').value;
                
                // Convert cuisine array to string
                const cuisines = $('#cuisine_type').val();
                if (cuisines) {
                    formData.set('cuisine_type', cuisines.join(','));
                }
                
                // Prepare opening hours object
                const openingHours = {
                    weekday: formData.get('weekday_hours'),
                    saturday: formData.get('saturday_hours'),
                    sunday: formData.get('sunday_hours')
                };
                formData.set('opening_hours', JSON.stringify(openingHours));
                
                // Remove temporary fields
                ['weekday_hours', 'saturday_hours', 'sunday_hours'].forEach(field => formData.delete(field));
                
                // Convert booleans
                ['is_active', 'is_accepting_orders', 'is_verified', 'is_featured', 'allow_preorder'].forEach(field => {
                    formData.set(field, formData.get(field) === 'on' ? 'true' : 'false');
                });
                
                // Determine API endpoint and method
                const url = restaurantId ? `${API_BASE}/${restaurantId}` : API_BASE;
                const method = restaurantId ? 'PUT' : 'POST';
                
                // Send request
                const response = await fetch(url, {
                    method: method,
                    body: formData,
                    headers: {
                        'Authorization': `Bearer ${getToken()}`
                    }
                });
                
                const data = await response.json();
                
                if (data.success) {
                    const action = restaurantId ? 'updated' : 'created';
                    showNotification('Success', `Restaurant ${action} successfully`, 'success');
                    
                    // Close modal
                    const modal = bootstrap.Modal.getInstance(document.getElementById('restaurantModal'));
                    modal.hide();
                    
                    // Reload page to show updated data
                    setTimeout(() => {
                        window.location.reload();
                    }, 1500);
                } else {
                    showNotification('Error', data.error || `Failed to ${restaurantId ? 'update' : 'create'} restaurant`, 'error');
                }
            } catch (error) {
                console.error('Error saving restaurant:', error);
                showNotification('Error', 'Failed to save restaurant: ' + error.message, 'error');
            } finally {
                hideLoading();
            }
        }
        
        // Get current location
        function getCurrentLocation() {
            if (navigator.geolocation) {
                showNotification('Info', 'Getting your current location...', 'info');
                
                navigator.geolocation.getCurrentPosition(
                    (position) => {
                        document.getElementById('latitude').value = position.coords.latitude.toFixed(6);
                        document.getElementById('longitude').value = position.coords.longitude.toFixed(6);
                        showNotification('Success', 'Location fetched successfully!', 'success');
                        
                        // Update map preview
                        updateMapPreview();
                    },
                    (error) => {
                        console.error('Geolocation error:', error);
                        showNotification('Error', 'Failed to get location: ' + error.message, 'error');
                    }
                );
            } else {
                showNotification('Error', 'Geolocation is not supported by your browser', 'error');
            }
        }
        
        function updateMapPreview() {
            const lat = document.getElementById('latitude').value;
            const lng = document.getElementById('longitude').value;
            
            if (lat && lng) {
                const mapPreview = document.getElementById('mapPreview');
                mapPreview.innerHTML = `
                    <iframe 
                        width="100%" 
                        height="100%" 
                        frameborder="0" 
                        scrolling="no" 
                        marginheight="0" 
                        marginwidth="0" 
                        src="https://maps.google.com/maps?q=${lat},${lng}&z=15&output=embed"
                        style="border-radius: 8px;">
                    </iframe>
                `;
            }
        }
        
        // Get JWT token (you'll need to implement this based on your auth system)
        function getToken() {
            // This is a placeholder - implement based on your authentication system
            return localStorage.getItem('token') || '';
        }
        
        // Listen for coordinates changes to update map
        document.getElementById('latitude').addEventListener('input', updateMapPreview);
        document.getElementById('longitude').addEventListener('input', updateMapPreview);
    </script>
