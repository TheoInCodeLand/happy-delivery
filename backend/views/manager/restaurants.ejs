            }
        }
        
        // Filter and sort restaurants
        function filterRestaurants() {
            const searchTerm = document.getElementById('searchInput').value.toLowerCase();
            const statusFilter = document.getElementById('statusFilter').value;
            const orderFilter = document.getElementById('orderFilter').value;
            
            const cards = document.querySelectorAll('[data-restaurant-id]');
            
            cards.forEach(card => {
                const cardText = card.textContent.toLowerCase();
                const isActive = card.querySelector('.bg-success') !== null;
                
                let shouldShow = true;
                
                // Search filter
                if (searchTerm && !cardText.includes(searchTerm)) {
                    shouldShow = false;
                }
                
                // Status filter
                if (statusFilter) {
                    if (statusFilter === 'active' && !isActive) {
                        shouldShow = false;
                    } else if (statusFilter === 'inactive' && isActive) {
                        shouldShow = false;
                    }
                }
                
                card.style.display = shouldShow ? 'block' : 'none';
            });
            
            // Sort functionality
            if (orderFilter) {
                sortRestaurants(orderFilter);
            }
        }
        
        function sortRestaurants(order) {
            const container = document.getElementById('restaurantsList');
            const cards = Array.from(container.querySelectorAll('[data-restaurant-id]'));
            
            cards.sort((a, b) => {
                const aText = a.textContent.toLowerCase();
                const bText = b.textContent.toLowerCase();
                const aRating = parseFloat(a.querySelector('.fa-star').parentNode.textContent.split('•')[0].trim()) || 0;
                const bRating = parseFloat(b.querySelector('.fa-star').parentNode.textContent.split('•')[0].trim()) || 0;
                
                switch (order) {
                    case 'name_asc':
                        return aText.localeCompare(bText);
                    case 'name_desc':
                        return bText.localeCompare(aText);
                    case 'rating_high':
                        return bRating - aRating;
                    case 'rating_low':
                        return aRating - bRating;
                    default:
                        return 0;
                }
            });
            
            // Reorder cards
            cards.forEach(card => container.appendChild(card));
        }
        
